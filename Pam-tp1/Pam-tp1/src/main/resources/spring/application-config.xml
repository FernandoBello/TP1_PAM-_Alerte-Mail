<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="message_id"
		  class="pam.tp1.format.FormatMessage"></bean>

	<bean id="mail_id"
		  class="pam.tp1.alert.SendMessage"></bean>

	<bean id="remove_id"
		  class="pam.tp1.format.RemoveLineMessage">
	</bean>

	<bean id="advanced_id"
		  class="pam.tp1.advancedTools.AdvancedToolsMessage">
	</bean>

	<bean id = "split_id"
		  class = "pam.tp1.format.RemoveLineMessage"></bean>

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com"/>
		<property name="port" value="587"/>
		<property name="username" value="fernandobello.ocampo@gmail.com"/>
		<property name="password" value="titico"/>
		<property name="javaMailProperties">
		<props>
			<prop key="mail.transport.protocol">smtp</prop>
			<prop key="mail.smtp.auth">true</prop>
			<prop key="mail.smtp.starttls.enable">true</prop>
			<prop key="mail.smtp.ssl.trust">smtp.gmail.com</prop>
		</props>
		</property>
 	</bean>
	<context:annotation-config/>
</beans>
